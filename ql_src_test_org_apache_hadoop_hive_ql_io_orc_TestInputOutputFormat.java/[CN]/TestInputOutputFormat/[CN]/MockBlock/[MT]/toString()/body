{
  StringBuilder buffer=new StringBuilder();
  buffer.append("block{offset: ");
  buffer.append(offset);
  buffer.append(", length: ");
  buffer.append(length);
  buffer.append(", hosts: [");
  for (int i=0; i < hosts.length; i++) {
    if (i != 0) {
      buffer.append(", ");
    }
    buffer.append(hosts[i]);
  }
  buffer.append("]}");
  return buffer.toString();
}
