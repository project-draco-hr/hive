{
  ListenableFuture<SourceStateUpdatedResponseProto> future=executor.submit(new SendSourceStateUpdateCallable(host,port,request));
  Futures.addCallback(future,new FutureCallback<SourceStateUpdatedResponseProto>(){
    @Override public void onSuccess(    SourceStateUpdatedResponseProto result){
      callback.setResponse(result);
    }
    @Override public void onFailure(    Throwable t){
      callback.indicateError(t);
    }
  }
);
}
