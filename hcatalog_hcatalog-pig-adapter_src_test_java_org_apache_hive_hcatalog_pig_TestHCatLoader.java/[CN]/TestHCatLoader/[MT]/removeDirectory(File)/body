{
  boolean success=false;
  if (dir.isDirectory()) {
    File[] files=dir.listFiles();
    if (files != null && files.length > 0) {
      for (      File file : files) {
        success=removeDirectory(file);
        if (!success) {
          return false;
        }
      }
    }
    success=dir.delete();
  }
 else {
    success=dir.delete();
  }
  return success;
}
