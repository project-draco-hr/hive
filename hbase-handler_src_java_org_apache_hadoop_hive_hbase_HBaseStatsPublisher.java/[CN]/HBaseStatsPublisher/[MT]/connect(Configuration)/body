{
  try {
    HBaseConfiguration hbaseConf=new HBaseConfiguration(hiveconf);
    htable=new HTable(hbaseConf,HBaseStatsSetupConstants.PART_STAT_TABLE_NAME);
    htable.setAutoFlush(false);
  }
 catch (  IOException e) {
    LOG.error("Error during HBase connection. " + e);
    return false;
  }
  return true;
}
