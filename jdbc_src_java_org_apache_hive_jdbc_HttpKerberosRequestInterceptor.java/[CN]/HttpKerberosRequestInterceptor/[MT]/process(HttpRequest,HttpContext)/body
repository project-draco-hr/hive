{
  String kerberosAuthHeader;
  try {
    kerberosLock.lock();
    kerberosAuthHeader=HttpAuthUtils.getKerberosServiceTicket(principal,host,serverHttpUrl);
    httpRequest.addHeader(HttpAuthUtils.AUTHORIZATION + ": " + HttpAuthUtils.NEGOTIATE+ " ",kerberosAuthHeader);
  }
 catch (  Exception e) {
    throw new HttpException(e.getMessage(),e);
  }
 finally {
    kerberosLock.unlock();
  }
}
