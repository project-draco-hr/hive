{
  if (failures >= maxRetries) {
    return false;
  }
  closeConnection();
  long waitTime=Utilities.getRandomWaitTime(waitWindow,failures,r);
  try {
    Thread.sleep(waitTime);
  }
 catch (  InterruptedException iex) {
  }
  if (!connect(hiveconf)) {
    LOG.error("Error during publishing aggregation. " + e);
    return false;
  }
  return true;
}
