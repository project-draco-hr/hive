{
  StringBuilder bar=new StringBuilder("[");
  int remainingChars=progressBarChars - 4;
  int completed=(int)(remainingChars * percent);
  int pending=remainingChars - completed;
  for (int i=0; i < completed; i++) {
    bar.append("=");
  }
  bar.append(">>");
  for (int i=0; i < pending; i++) {
    bar.append("-");
  }
  bar.append("]");
  return bar.toString();
}
