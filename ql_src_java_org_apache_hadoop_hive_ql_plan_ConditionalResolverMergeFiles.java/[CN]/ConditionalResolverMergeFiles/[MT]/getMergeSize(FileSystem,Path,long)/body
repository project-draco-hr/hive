{
  try {
    FileStatus[] fStats=inpFs.listStatus(dirPath);
    if (fStats.length <= 1) {
      return -1;
    }
    long totalSz=0;
    for (    FileStatus fStat : fStats) {
      totalSz+=fStat.getLen();
    }
    if (totalSz < avgSize * fStats.length) {
      return totalSz;
    }
 else {
      return -1;
    }
  }
 catch (  IOException e) {
    return -1;
  }
}
