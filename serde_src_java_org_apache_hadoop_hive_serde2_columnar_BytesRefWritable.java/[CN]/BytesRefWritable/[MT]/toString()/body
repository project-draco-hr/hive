{
  StringBuilder sb=new StringBuilder(3 * length);
  for (int idx=start; idx < length; idx++) {
    if (idx != 0) {
      sb.append(' ');
    }
    String num=Integer.toHexString(0xff & bytes[idx]);
    if (num.length() < 2) {
      sb.append('0');
    }
    sb.append(num);
  }
  return sb.toString();
}
