{
  for (  OptionConstants optionConstant : OptionConstants.values()) {
    OptionBuilder optionBuilder=OptionBuilder.hasArgs(optionConstant.getNumArgs()).withArgName(optionConstant.getArgName()).withLongOpt(optionConstant.getLongOpt()).withDescription(optionConstant.getDescription());
    if (optionConstant.getShortOpt() == null) {
      options.addOption(optionBuilder.create());
    }
 else {
      options.addOption(optionBuilder.create(optionConstant.getShortOpt()));
    }
  }
}
