{
  this.testOutputDir=testOutputDir;
  if (!Strings.isNullOrEmpty(testOutputDir)) {
    Preconditions.checkArgument(!Strings.isNullOrEmpty(logsEndpoint),"logsEndPoint must be specified if " + OUTPUT_DIR + " is specified");
    if (logsEndpoint.endsWith("/")) {
      this.mLogsEndpoint=logsEndpoint;
    }
 else {
      this.mLogsEndpoint=logsEndpoint + "/";
    }
  }
 else {
    this.mLogsEndpoint=null;
  }
  if (apiEndPoint.endsWith("/")) {
    this.mApiEndPoint=apiEndPoint + "api/v1";
  }
 else {
    this.mApiEndPoint=apiEndPoint + "/api/v1";
  }
  URL apiURL=new URL(mApiEndPoint);
  mMapper=new ObjectMapper();
  mHttpClient=new DefaultHttpClient();
  mHttpClient.getCredentialsProvider().setCredentials(new AuthScope(apiURL.getHost(),apiURL.getPort(),AuthScope.ANY_REALM),new UsernamePasswordCredentials("hive",password));
}
