  if (endPoint.endsWith("/")) {
    mApiEndPoint=endPoint + "api/v1";
    mLogsEndpoint=endPoint + "logs/";
  }
 else {
    mApiEndPoint=endPoint + "/api/v1";
    mLogsEndpoint=endPoint + "/logs/";
