{
  try {
    Class<? extends AbstractSemanticAnalyzerHook> hookClass=(Class<? extends AbstractSemanticAnalyzerHook>)Class.forName(hookName,true,JavaUtils.getClassLoader());
    return (AbstractSemanticAnalyzerHook)ReflectionUtils.newInstance(hookClass,conf);
  }
 catch (  ClassNotFoundException e) {
    throw new HiveException("Error in loading semantic analyzer hook: " + hookName + e.getMessage(),e);
  }
}
