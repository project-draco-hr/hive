{
  Class.forName(MiniHS2.getJdbcDriverName());
  conf=new HiveConf();
  conf.setBoolVar(ConfVars.HIVE_SUPPORT_CONCURRENCY,false);
  String dataFileDir=conf.get("test.data.files").replace('\\','/').replace("c:","");
  dataFilePath=new Path(dataFileDir,"kv1.txt");
  DriverManager.setLoginTimeout(0);
  conf.setBoolVar(HiveConf.ConfVars.HIVE_SUPPORT_CONCURRENCY,false);
  miniHS2=new MiniHS2(conf,true);
  Map<String,String> overlayProps=new HashMap<String,String>();
  overlayProps.put(ConfVars.HIVE_SERVER2_SESSION_HOOK.varname,MiniMrTestSessionHook.class.getName());
  miniHS2.start(overlayProps);
  createDb();
}
