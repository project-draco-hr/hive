{
  int remaining=Math.min(current.remaining(),length);
  current.put(bytes,offset,remaining);
  uncompressedBytes+=remaining;
  length-=remaining;
  while (length != 0) {
    spill();
    offset+=remaining;
    remaining=Math.min(current.remaining(),length);
    current.put(bytes,offset,remaining);
    uncompressedBytes+=remaining;
    length-=remaining;
  }
}
