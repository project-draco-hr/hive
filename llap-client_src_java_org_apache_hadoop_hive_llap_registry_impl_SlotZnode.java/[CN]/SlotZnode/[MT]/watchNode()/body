{
  if (!isActive())   return;
  String localNodePath=nodePath.get();
  if (localNodePath == null)   return;
  try {
    client.checkExists().usingWatcher(watcher).inBackground(checkExistsCallback).forPath(localNodePath);
  }
 catch (  Exception e) {
    LOG.error("Watching node: " + localNodePath,e);
    throw e;
  }
}
