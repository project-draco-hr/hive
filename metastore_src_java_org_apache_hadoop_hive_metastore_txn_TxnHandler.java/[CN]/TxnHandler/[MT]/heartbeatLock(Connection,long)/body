{
  if (extLockId == 0)   return;
  try {
    Statement stmt=dbConn.createStatement();
    long now=System.currentTimeMillis();
    String s="update HIVE_LOCKS set hl_last_heartbeat = " + now + " where hl_lock_ext_id = "+ extLockId;
    LOG.debug("Going to execute update <" + s + ">");
    int rc=stmt.executeUpdate(s);
    if (rc < 1) {
      LOG.debug("Going to rollback");
      dbConn.rollback();
      throw new NoSuchLockException("No such lock: " + extLockId);
    }
  }
 catch (  SQLException e) {
    try {
      LOG.debug("Going to rollback");
      dbConn.rollback();
    }
 catch (    SQLException e1) {
    }
    throw new MetaException("Unable to connect to transaction database" + StringUtils.stringifyException(e));
  }
}
