{
  if (!hcatRequiredType.contains(hcatActualField.getType())) {
    throw new FrontendException("Pig '" + DataType.findTypeName(pigDataType) + "' type in column "+ columnPos+ "(0-based) cannot map to HCat '"+ hcatActualField.getType()+ "'type.  Target filed must be of HCat type {"+ StringUtils.join(hcatRequiredType," or ")+ "}");
  }
}
