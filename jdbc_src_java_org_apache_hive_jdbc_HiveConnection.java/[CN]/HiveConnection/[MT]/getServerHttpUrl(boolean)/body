{
  String schemeName=useSsl ? "https" : "http";
  String httpPath;
  httpPath=hiveConfMap.get(HiveConf.ConfVars.HIVE_SERVER2_THRIFT_HTTP_PATH.varname);
  if (httpPath == null) {
    httpPath="/";
  }
 else   if (!httpPath.startsWith("/")) {
    httpPath="/" + httpPath;
  }
  return schemeName + "://" + host+ ":"+ port+ httpPath;
}
