{
  ArrayList<String> allNodes=new ArrayList<String>();
  HashMap<String,String> map=new HashMap<String,String>();
  try {
    for (    FileStatus status : fs.listStatus(new Path(getPath(type)))) {
      map=(HashMap<String,String>)getFields(type,status.getPath().getName());
      if (map.get(key).equals(value)) {
        allNodes.add(status.getPath().getName());
      }
    }
  }
 catch (  Exception e) {
    LOG.trace("Couldn't find children for key " + key + ": "+ e.getMessage());
  }
  return allNodes;
}
