{
  FileSystem fs=FileSystem.getLocal(conf);
  Path dir=fs.makeQualified(new Path(System.getProperty("java.io.tmpdir") + Path.SEPARATOR + System.getProperty("user.name")+ Path.SEPARATOR+ executionId));
  if (mkdir) {
    if (!fs.mkdirs(dir)) {
      throw new IOException("Cannot make directory: " + dir);
    }
  }
  return dir;
}
