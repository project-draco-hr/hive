{
  Path dir=new Path(extURI.getScheme(),extURI.getAuthority(),conf.getVar(HiveConf.ConfVars.SCRATCHDIR) + Path.SEPARATOR + executionId);
  if (mkdir) {
    FileSystem fs=dir.getFileSystem(conf);
    if (!fs.mkdirs(dir)) {
      throw new IOException("Cannot make directory: " + dir);
    }
  }
  return dir;
}
