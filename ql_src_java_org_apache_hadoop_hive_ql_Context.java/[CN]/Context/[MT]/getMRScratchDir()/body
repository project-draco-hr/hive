{
  if (isLocalOnlyExecutionMode())   return getLocalScratchDir(!explain);
  try {
    Path dir=FileUtils.makeQualified(nonLocalScratchPath,conf);
    URI uri=dir.toUri();
    return getScratchDir(uri.getScheme(),uri.getAuthority(),!explain,uri.getPath());
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
catch (  IllegalArgumentException e) {
    throw new RuntimeException("Error while making MR scratch " + "directory - check filesystem config (" + e.getCause() + ")",e);
  }
}
