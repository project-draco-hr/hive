{
  try {
    if (MRScratchDir == null) {
      MRScratchDir=makeMRScratchDir(conf,executionId,!explain);
    }
    return MRScratchDir.toString();
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
catch (  IllegalArgumentException e) {
    throw new RuntimeException("Error while making MR scratch " + "directory - check filesystem config (" + e.getCause() + ")",e);
  }
}
