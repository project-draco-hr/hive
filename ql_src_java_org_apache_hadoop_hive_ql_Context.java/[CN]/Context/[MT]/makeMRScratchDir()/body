{
  while (true) {
    MRScratchDir=FileUtils.makeQualified(new Path(conf.getVar(HiveConf.ConfVars.SCRATCHDIR),Integer.toString(Math.abs(rand.nextInt()))),conf);
    if (explain) {
      allScratchDirs.add(MRScratchDir);
      return;
    }
    FileSystem fs=MRScratchDir.getFileSystem(conf);
    if (fs.mkdirs(MRScratchDir)) {
      allScratchDirs.add(MRScratchDir);
      return;
    }
  }
}
