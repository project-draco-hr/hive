{
  while (true) {
    String extPath=scratchPath + File.separator + Integer.toString(Math.abs(rand.nextInt()));
    Path extScratchDir=new Path(extURI.getScheme(),extURI.getAuthority(),extPath);
    if (explain) {
      allScratchDirs.add(extScratchDir);
      return extScratchDir;
    }
    FileSystem fs=extScratchDir.getFileSystem(conf);
    if (fs.mkdirs(extScratchDir)) {
      allScratchDirs.add(extScratchDir);
      return extScratchDir;
    }
  }
}
