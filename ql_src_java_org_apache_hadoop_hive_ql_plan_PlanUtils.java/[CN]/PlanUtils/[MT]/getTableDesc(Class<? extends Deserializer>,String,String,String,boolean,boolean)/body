{
  Properties properties=Utilities.makeProperties(Constants.SERIALIZATION_FORMAT,separatorCode,Constants.LIST_COLUMNS,columns);
  if (columnTypes != null)   properties.setProperty(Constants.LIST_COLUMN_TYPES,columnTypes);
  if (lastColumnTakesRestOfTheLine) {
    properties.setProperty(Constants.SERIALIZATION_LAST_COLUMN_TAKES_REST,"true");
  }
  if (useJSONForLazy)   properties.setProperty(Constants.SERIALIZATION_USE_JSON_OBJECTS,"true");
  return new tableDesc(serdeClass,TextInputFormat.class,IgnoreKeyTextOutputFormat.class,properties);
}
