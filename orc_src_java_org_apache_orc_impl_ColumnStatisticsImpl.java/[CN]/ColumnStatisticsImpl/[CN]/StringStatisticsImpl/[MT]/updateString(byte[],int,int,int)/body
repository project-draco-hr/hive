{
  if (minimum == null) {
    maximum=minimum=new Text();
    maximum.set(bytes,offset,length);
  }
 else   if (WritableComparator.compareBytes(minimum.getBytes(),0,minimum.getLength(),bytes,offset,length) > 0) {
    minimum=new Text();
    minimum.set(bytes,offset,length);
  }
 else   if (WritableComparator.compareBytes(maximum.getBytes(),0,maximum.getLength(),bytes,offset,length) < 0) {
    maximum=new Text();
    maximum.set(bytes,offset,length);
  }
  sum+=length * repetitions;
}
