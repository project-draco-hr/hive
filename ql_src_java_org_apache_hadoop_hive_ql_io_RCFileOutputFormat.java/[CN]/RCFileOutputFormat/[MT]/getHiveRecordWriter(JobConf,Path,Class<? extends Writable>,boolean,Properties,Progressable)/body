{
  String[] cols=null;
  String columns=tableProperties.getProperty("columns");
  if (columns == null || columns.trim().equals("")) {
    cols=new String[0];
  }
 else {
    cols=StringUtils.split(columns,",");
  }
  RCFileOutputFormat.setColumnNumber(jc,cols.length);
  final RCFile.Writer outWriter=Utilities.createRCFileWriter(jc,FileSystem.get(jc),finalOutPath,isCompressed);
  return new org.apache.hadoop.hive.ql.exec.FileSinkOperator.RecordWriter(){
    public void write(    Writable r) throws IOException {
      outWriter.append(r);
    }
    public void close(    boolean abort) throws IOException {
      outWriter.close();
    }
  }
;
}
