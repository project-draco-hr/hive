{
  HiveServerHandler.LOG.info("Running the query: " + query);
  int rc=0;
  try {
    rc=driver.run(query);
  }
 catch (  Exception e) {
    throw new HiveServerException("Error running query: " + e.toString());
  }
  if (rc != 0) {
    throw new HiveServerException("Query returned non-zero code: " + rc);
  }
}
