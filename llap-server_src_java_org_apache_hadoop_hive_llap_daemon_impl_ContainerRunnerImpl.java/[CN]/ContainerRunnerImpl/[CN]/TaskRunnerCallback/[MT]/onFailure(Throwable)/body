{
  LOG.error("TezTaskRunner execution failed for : " + getTaskIdentifierString(request),t);
  taskRunnerCallable.shutdown();
  HistoryLogger.logFragmentEnd(request.getApplicationIdString(),request.getContainerIdString(),localAddress.get().getHostName(),request.getFragmentSpec().getDagName(),request.getFragmentSpec().getVertexName(),request.getFragmentSpec().getFragmentNumber(),request.getFragmentSpec().getAttemptNumber(),taskRunnerCallable.threadName,taskRunnerCallable.startTime,false);
  metrics.decrExecutorNumQueuedRequests();
}
