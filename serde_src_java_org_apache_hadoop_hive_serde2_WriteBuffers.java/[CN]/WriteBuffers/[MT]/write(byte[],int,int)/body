{
  int srcOffset=0;
  while (srcOffset < len) {
    int toWrite=Math.min(len - srcOffset,wbSize - writePos.offset);
    System.arraycopy(b,srcOffset + off,writePos.buffer,writePos.offset,toWrite);
    writePos.offset+=toWrite;
    srcOffset+=toWrite;
    if (writePos.offset == wbSize) {
      nextBufferToWrite();
    }
  }
}
