{
  if (inTest) {
    forTestSchedulerLock.lock();
    try {
      while (forTestNumSchedulerRuns.get() != runNumber) {
        forTestSchedulerRunCondition.await();
      }
    }
 catch (    InterruptedException e) {
      throw new RuntimeException(e);
    }
 finally {
      forTestSchedulerLock.unlock();
    }
  }
}
