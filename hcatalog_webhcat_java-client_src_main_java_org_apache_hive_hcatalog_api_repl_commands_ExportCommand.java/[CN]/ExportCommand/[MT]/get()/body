{
  StringBuilder sb=new StringBuilder();
  sb.append("EXPORT TABLE ");
  sb.append(dbName);
  sb.append(".");
  sb.append(tableName);
  sb.append(ReplicationUtils.partitionDescriptor(ptnDesc));
  sb.append(" TO '");
  sb.append(exportLocation);
  sb.append("\' FOR ");
  if (isMetadataOnly) {
    sb.append("METADATA ");
  }
  sb.append("REPLICATION(\'");
  sb.append(eventId);
  sb.append("\')");
  return Collections.singletonList(sb.toString());
}
