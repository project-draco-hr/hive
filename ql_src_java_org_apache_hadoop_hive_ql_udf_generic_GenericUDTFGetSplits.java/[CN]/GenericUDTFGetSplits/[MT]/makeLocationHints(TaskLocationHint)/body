{
  Set<String> hosts=hint.getHosts();
  if (hosts.size() != 1) {
    LOG.warn("Bad # of locations: " + hosts.size());
  }
  SplitLocationInfo[] locations=new SplitLocationInfo[hosts.size()];
  int j=0;
  for (  String host : hosts) {
    locations[j++]=new SplitLocationInfo(host,false);
  }
  return locations;
}
