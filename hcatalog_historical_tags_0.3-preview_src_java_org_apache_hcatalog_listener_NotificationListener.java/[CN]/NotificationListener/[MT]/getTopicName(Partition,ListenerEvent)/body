{
  try {
    String topicName=partitionEvent.getHandler().get_table(partition.getDbName(),partition.getTableName()).getParameters().get(HCatConstants.HCAT_MSGBUS_TOPIC_NAME);
    if (topicName == null) {
      throw new MetaException("Topic name not found in metastore. Please do alter table set properties (" + HCatConstants.HCAT_MSGBUS_TOPIC_NAME + "=dbname.tablename) or whatever you want topic name to be.");
    }
    return topicName;
  }
 catch (  NoSuchObjectException e) {
    throw new MetaException(e.toString());
  }
}
