{
  ASTNode hints=qb.getParseInfo().getHints();
  if (hints == null) {
    return false;
  }
  for (int pos=0; pos < hints.getChildCount(); pos++) {
    ASTNode hint=(ASTNode)hints.getChild(pos);
    if (((ASTNode)hint.getChild(0)).getToken().getType() == HiveParser.TOK_HOLD_DDLTIME) {
      return true;
    }
  }
  return false;
}
