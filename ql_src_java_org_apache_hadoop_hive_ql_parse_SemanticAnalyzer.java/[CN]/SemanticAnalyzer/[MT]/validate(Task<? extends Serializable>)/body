{
  if ((task instanceof MapRedTask) || (task instanceof ExecDriver)) {
    mapredWork work=(mapredWork)task.getWork();
    if (conf.getVar(HiveConf.ConfVars.HIVEMAPREDMODE).equalsIgnoreCase("strict")) {
      if ((work.getPathToAliases() == null) || (work.getPathToAliases().isEmpty()))       throw new SemanticException(ErrorMsg.NO_VALID_PARTN.getMsg());
    }
  }
  if (task.getChildTasks() == null)   return;
  for (  Task<? extends Serializable> childTask : task.getChildTasks())   validate(childTask);
}
