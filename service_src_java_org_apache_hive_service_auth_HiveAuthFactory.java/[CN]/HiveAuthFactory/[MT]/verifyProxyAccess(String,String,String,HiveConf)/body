{
  UserGroupInformation sessionUgi;
  try {
    if (ShimLoader.getHadoopShims().isSecurityEnabled()) {
      sessionUgi=ShimLoader.getHadoopShims().createProxyUser(realUser);
    }
 else {
      sessionUgi=ShimLoader.getHadoopShims().createRemoteUser(realUser,null);
    }
    if (!proxyUser.equalsIgnoreCase(realUser)) {
      ShimLoader.getHadoopShims().authorizeProxyAccess(proxyUser,sessionUgi,ipAddress,hiveConf);
    }
  }
 catch (  IOException e) {
    throw new HiveSQLException("Failed to validate proxy privilage of " + realUser + " for "+ proxyUser,e);
  }
}
