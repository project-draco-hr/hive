{
  fs.setPermission(dir,permission);
  if (recursive) {
    for (    FileStatus fileStatus : fs.listStatus(dir)) {
      if (fileStatus.isDir()) {
        applyGroupAndPerms(fs,fileStatus.getPath(),permission,group,true);
      }
 else {
        fs.setPermission(fileStatus.getPath(),permission);
      }
    }
  }
}
