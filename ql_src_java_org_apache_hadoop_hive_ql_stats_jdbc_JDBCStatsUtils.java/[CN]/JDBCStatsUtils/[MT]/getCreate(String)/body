{
  String create="CREATE TABLE /* " + comment + " */ "+ JDBCStatsUtils.getStatTableName()+ " ("+ getTimestampColumnName()+ " TIMESTAMP DEFAULT CURRENT_TIMESTAMP, "+ JDBCStatsUtils.getIdColumnName()+ " VARCHAR("+ JDBCStatsSetupConstants.ID_COLUMN_VARCHAR_SIZE+ ") PRIMARY KEY ";
  for (int i=0; i < supportedStats.size(); i++) {
    create+=", " + getStatColumnName(supportedStats.get(i)) + " BIGINT ";
  }
  create+=")";
  return create;
}
