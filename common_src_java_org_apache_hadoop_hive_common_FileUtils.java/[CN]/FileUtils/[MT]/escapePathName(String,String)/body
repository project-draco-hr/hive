{
  if (path == null || path.length() == 0) {
    if (defaultPath == null) {
      return "__HIVE_DEFAULT_PARTITION__";
    }
 else {
      return defaultPath;
    }
  }
  StringBuilder sb=new StringBuilder();
  for (int i=0; i < path.length(); i++) {
    char c=path.charAt(i);
    if (needsEscaping(c)) {
      sb.append('%');
      sb.append(String.format("%1$02X",(int)c));
    }
 else {
      sb.append(c);
    }
  }
  return sb.toString();
}
