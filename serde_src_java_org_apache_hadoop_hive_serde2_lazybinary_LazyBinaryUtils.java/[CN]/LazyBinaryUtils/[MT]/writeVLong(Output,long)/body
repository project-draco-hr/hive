{
  if (l >= -112 && l <= 127) {
    byteStream.write((byte)l);
    return;
  }
  int len=-112;
  if (l < 0) {
    l^=-1L;
    len=-120;
  }
  long tmp=l;
  while (tmp != 0) {
    tmp=tmp >> 8;
    len--;
  }
  byteStream.write((byte)len);
  len=(len < -120) ? -(len + 120) : -(len + 112);
  for (int idx=len; idx != 0; idx--) {
    int shiftbits=(idx - 1) * 8;
    long mask=0xFFL << shiftbits;
    byteStream.write((byte)((l & mask) >> shiftbits));
  }
}
