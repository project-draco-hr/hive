{
  HCatDatabase db=null;
  try {
    Database hiveDB=hmsClient.getDatabase(checkDB(dbName));
    if (hiveDB != null) {
      db=new HCatDatabase(hiveDB);
    }
  }
 catch (  NoSuchObjectException exp) {
    throw new ObjectNotFoundException("NoSuchObjectException while fetching database",exp);
  }
catch (  MetaException exp) {
    throw new HCatException("MetaException while fetching database",exp);
  }
catch (  TException exp) {
    throw new ConnectionFailureException("TException while fetching database",exp);
  }
  return db;
}
