{
  if (client == null) {
    if (conf == null) {
      throw new RuntimeException("Must call setHiveConf before any other " + "methods.");
    }
    try {
      client=new HiveMetaStoreClient(conf);
    }
 catch (    MetaException e) {
      throw new LockException(ErrorMsg.METASTORE_COULD_NOT_INITIATE.getMsg(),e);
    }
  }
}
