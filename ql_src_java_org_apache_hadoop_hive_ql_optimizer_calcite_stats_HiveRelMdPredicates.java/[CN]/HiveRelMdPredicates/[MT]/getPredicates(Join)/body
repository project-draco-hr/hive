{
  RexBuilder rB=join.getCluster().getRexBuilder();
  RelNode left=join.getInput(0);
  RelNode right=join.getInput(1);
  RelOptPredicateList leftInfo=RelMetadataQuery.getPulledUpPredicates(left);
  RelOptPredicateList rightInfo=RelMetadataQuery.getPulledUpPredicates(right);
  HiveJoinConditionBasedPredicateInference jI=new HiveJoinConditionBasedPredicateInference(join,RexUtil.composeConjunction(rB,leftInfo.pulledUpPredicates,false),RexUtil.composeConjunction(rB,rightInfo.pulledUpPredicates,false));
  return jI.inferPredicates(false);
}
