{
  if (limit > 0 && data.hasOnlyPruningFilter()) {
    return true;
  }
  long threshold=HiveConf.getLongVar(pctx.getConf(),HiveConf.ConfVars.HIVEFETCHTASKCONVERSIONTHRESHOLD);
  if (threshold < 0) {
    return true;
  }
  long remaining=threshold;
  remaining-=data.getInputLength(pctx,remaining);
  if (remaining < 0) {
    LOG.info("Threshold " + remaining + " exceeded for pseudoMR mode");
    return false;
  }
  return true;
}
