{
  boolean commit=false;
  openTransaction();
  try {
    getHBase().deleteDb(HiveStringUtils.normalizeIdentifier(dbname));
    commit=true;
    return true;
  }
 catch (  IOException e) {
    LOG.error("Unable to delete db" + e);
    throw new MetaException("Unable to drop database " + e.getMessage());
  }
 finally {
    commitOrRoleBack(commit);
  }
}
