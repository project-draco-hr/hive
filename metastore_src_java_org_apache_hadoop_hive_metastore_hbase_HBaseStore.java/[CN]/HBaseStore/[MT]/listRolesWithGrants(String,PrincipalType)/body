{
  try {
    List<Role> roles=listRoles(principalName,principalType);
    List<RolePrincipalGrant> rpgs=new ArrayList<RolePrincipalGrant>(roles.size());
    for (    Role role : roles) {
      GrantInfoList grants=getHBase().getRolePrincipals(role.getRoleName());
      for (      GrantInfoWritable grant : grants.grantInfos) {
        if (grant.principalType.equals(principalType) && grant.principalName.equals(principalName)) {
          rpgs.add(new RolePrincipalGrant(role.getRoleName(),principalName,principalType,grant.grantOption,grant.addTime,grant.grantor,grant.grantorType));
        }
      }
    }
    return rpgs;
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
}
