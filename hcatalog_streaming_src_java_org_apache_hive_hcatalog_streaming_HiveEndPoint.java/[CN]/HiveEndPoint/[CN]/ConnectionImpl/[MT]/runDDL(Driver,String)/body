{
  int retryCount=1;
  for (int attempt=0; attempt <= retryCount; ++attempt) {
    try {
      if (LOG.isDebugEnabled()) {
        LOG.debug("Running Hive Query: " + sql);
      }
      driver.run(sql);
      return true;
    }
 catch (    CommandNeedRetryException e) {
      if (attempt == retryCount) {
        throw new QueryFailedException(sql,e);
      }
      continue;
    }
  }
  return false;
}
