{
  try {
    jc=new JobClient(toJobConf(hconf));
    RunningJob job=jc.getJob(((MapRedTask)sourceTask).getJobID());
    if (job != null) {
      counters=job.getCounters();
    }
  }
 catch (  Exception e) {
    LOG.error("Failed to get Job instance for " + sourceTask.getJobID());
  }
  return counters != null;
}
