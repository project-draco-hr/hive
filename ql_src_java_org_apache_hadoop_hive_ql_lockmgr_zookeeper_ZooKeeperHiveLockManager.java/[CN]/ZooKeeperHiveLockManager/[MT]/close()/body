{
  try {
    if (zooKeeper != null) {
      zooKeeper.close();
      zooKeeper=null;
    }
    if (HiveConf.getBoolVar(ctx.getConf(),HiveConf.ConfVars.HIVE_ZOOKEEPER_CLEAN_EXTRA_NODES)) {
      removeAllRedundantNodes();
    }
  }
 catch (  Exception e) {
    LOG.error("Failed to close zooKeeper client: " + e);
    throw new LockException(e);
  }
}
