{
  Direction d=b.getDirection();
  int amt=b.getAmt();
switch (d) {
case PRECEDING:
    if (amt == BoundarySpec.UNBOUNDED_AMOUNT) {
      return 0;
    }
 else {
      return currRow - amt;
    }
case CURRENT:
  return currRow;
case FOLLOWING:
return currRow + amt;
}
throw new HiveException("Unknown Start Boundary Direction: " + d);
}
