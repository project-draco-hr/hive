{
  Vertex v=null;
  if (work instanceof MapWork) {
    v=createVertex(conf,(MapWork)work,appJarLr,additionalLr,fileSystem,scratchDir,ctx,tezWork);
  }
 else   if (work instanceof ReduceWork) {
    v=createVertex(conf,(ReduceWork)work,appJarLr,additionalLr,fileSystem,scratchDir,ctx);
  }
 else {
    throw new HiveException(ErrorMsg.GENERIC_ERROR.getErrorCodedMsg());
  }
  if (work.isGatheringStats()) {
    StatsPublisher statsPublisher;
    StatsFactory factory=StatsFactory.newFactory(conf);
    if (factory != null) {
      statsPublisher=factory.getStatsPublisher();
      if (!statsPublisher.init(conf)) {
        if (HiveConf.getBoolVar(conf,HiveConf.ConfVars.HIVE_STATS_RELIABLE)) {
          throw new HiveException(ErrorMsg.STATSPUBLISHER_INITIALIZATION_ERROR.getErrorCodedMsg());
        }
      }
    }
  }
  if (!hasChildren) {
    v.addDataSink("out_" + work.getName(),new DataSinkDescriptor(new OutputDescriptor(MROutput.class.getName()).setUserPayload(MRHelpers.createUserPayloadFromConf(conf)),null,null));
  }
  return v;
}
