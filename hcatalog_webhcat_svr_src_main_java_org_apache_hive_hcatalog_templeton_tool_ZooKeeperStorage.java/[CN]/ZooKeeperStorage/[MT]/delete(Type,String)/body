{
  try {
    for (    String child : zk.getChildren(makeZnode(type,id),false)) {
      try {
        zk.delete(makeFieldZnode(type,id,child),-1);
      }
 catch (      Exception e) {
        throw new NotFoundException("Couldn't delete " + makeFieldZnode(type,id,child));
      }
    }
    try {
      zk.delete(makeZnode(type,id),-1);
    }
 catch (    Exception e) {
      throw new NotFoundException("Couldn't delete " + makeZnode(type,id));
    }
  }
 catch (  Exception e) {
    throw new NotFoundException("Couldn't get children of " + makeZnode(type,id));
  }
  return true;
}
