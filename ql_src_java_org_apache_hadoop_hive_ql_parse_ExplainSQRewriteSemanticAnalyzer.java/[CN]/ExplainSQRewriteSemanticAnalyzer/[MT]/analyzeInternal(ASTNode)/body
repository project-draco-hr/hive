{
  ctx.setExplain(true);
  ASTNode input=(ASTNode)ast.getChild(0);
  SemanticAnalyzer sem=(SemanticAnalyzer)SemanticAnalyzerFactory.get(conf,input);
  sem.analyze(input,ctx);
  sem.validate();
  ctx.setResFile(ctx.getLocalTmpPath());
  ExplainSQRewriteWork work=new ExplainSQRewriteWork(ctx.getResFile().toString(),sem.getQB(),input,ctx);
  Task<? extends Serializable> explTask=TaskFactory.get(work,conf);
  fieldList=explTask.getResultSchema();
  rootTasks.add(explTask);
}
