{
  if (tableEvent.getStatus()) {
    Table before=tableEvent.getOldTable();
    Table after=tableEvent.getNewTable();
    if (after.getParameters() != null && after.getParameters().get(HCatConstants.HCAT_MSGBUS_TOPIC_NAME) != null && (before.getParameters() == null || before.getParameters().get(HCatConstants.HCAT_MSGBUS_TOPIC_NAME) == null)) {
      return;
    }
    String topicName=getTopicPrefix(tableEvent.getHandler().getHiveConf()) + "." + after.getDbName().toLowerCase();
    send(messageFactory.buildAlterTableMessage(before,after),topicName);
  }
}
