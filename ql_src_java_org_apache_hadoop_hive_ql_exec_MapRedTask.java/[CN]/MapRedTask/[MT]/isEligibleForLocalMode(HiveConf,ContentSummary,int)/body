{
  long maxBytes=conf.getLongVar(HiveConf.ConfVars.LOCALMODEMAXBYTES);
  long maxTasks=conf.getIntVar(HiveConf.ConfVars.LOCALMODEMAXTASKS);
  if (inputSummary.getLength() > maxBytes)   return "Input Size (= " + maxBytes + ") is larger than "+ HiveConf.ConfVars.LOCALMODEMAXBYTES.varname+ " (= "+ maxBytes+ ")";
  if (inputSummary.getFileCount() > maxTasks)   return "Number of Input Files (= " + inputSummary.getFileCount() + ") is larger than "+ HiveConf.ConfVars.LOCALMODEMAXTASKS.varname+ "(= "+ maxTasks+ ")";
  if (numReducers > 1)   return "Number of reducers (= " + numReducers + ") is more than 1";
  return null;
}
