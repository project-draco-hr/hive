{
  assumeTrue(!TestUtil.shouldSkip(storageFormat,DISABLED_STORAGE_FORMATS));
  pigValueRangeTest("junitTypeTest1","decimal(2)","bigdecimal",null,BigDecimal.valueOf(12).toString(),BigDecimal.valueOf(12).toString());
