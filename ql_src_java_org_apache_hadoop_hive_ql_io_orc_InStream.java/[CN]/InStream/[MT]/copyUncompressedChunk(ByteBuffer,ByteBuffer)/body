{
  int startPos=dest.position(), startLim=dest.limit();
  dest.put(src);
  int newPos=dest.position();
  if (newPos > startLim) {
    throw new AssertionError("After copying, buffer [" + startPos + ", "+ startLim+ ") became ["+ newPos+ ", "+ dest.limit()+ ")");
  }
  dest.position(startPos);
  dest.limit(newPos);
}
