{
  int start, end;
  if ((s == null) || (pos == null) || (len == null))   return null;
  if ((len <= 0) || (Math.abs(pos) > s.length()))   return "";
  if (pos > 0)   start=pos - 1;
 else   if (pos < 0)   start=s.length() + pos;
 else   start=0;
  if ((s.length() - start) < len)   end=s.length();
 else   end=start + len;
  return s.substring(start,end);
}
