{
  if ((Math.abs(pos) > inputLen)) {
    return null;
  }
  int start, end;
  if (pos > 0) {
    start=pos - 1;
  }
 else   if (pos < 0) {
    start=inputLen + pos;
  }
 else {
    start=0;
  }
  if ((inputLen - start) < len) {
    end=inputLen;
  }
 else {
    end=start + len;
  }
  index[0]=start;
  index[1]=end;
  return index;
}
