{
  super.shutdown();
  if (dagClient != null) {
    LOG.info("Shutting down Tez task " + this);
    try {
      dagClient.tryKillDAG();
      LOG.info("Waiting for Tez task to shut down: " + this);
      dagClient.waitForCompletion();
    }
 catch (    Exception ex) {
      LOG.warn("Failed to shut down TezTask" + this,ex);
    }
    closeDagClientWithoutEx();
  }
}
