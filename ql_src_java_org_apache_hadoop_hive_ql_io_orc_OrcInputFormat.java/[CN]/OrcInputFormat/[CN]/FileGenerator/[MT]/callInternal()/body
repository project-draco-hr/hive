{
  AcidUtils.Directory dirInfo=AcidUtils.getAcidState(dir,context.conf,context.transactionList,useFileIds,true);
  Path base=dirInfo.getBaseDirectory();
  List<HdfsFileStatusWithId> children=(base == null) ? dirInfo.getOriginalFiles() : findBaseFiles(base,useFileIds);
  return new AcidDirInfo(fs,dir,dirInfo,children);
}
