{
  if (hbaseCluster != null) {
    HConnectionManager.deleteAllConnections();
    try {
      hbaseCluster.shutdown();
    }
 catch (    Exception e) {
      e.printStackTrace();
    }
    hbaseCluster=null;
  }
  if (zookeeperCluster != null) {
    try {
      zookeeperCluster.shutdown();
    }
 catch (    Exception e) {
      e.printStackTrace();
    }
    zookeeperCluster=null;
  }
  if (mrCluster != null) {
    try {
      mrCluster.shutdown();
    }
 catch (    Exception e) {
      e.printStackTrace();
    }
    mrCluster=null;
  }
  if (dfsCluster != null) {
    try {
      dfsCluster.getFileSystem().close();
      dfsCluster.shutdown();
    }
 catch (    Exception e) {
      e.printStackTrace();
    }
    dfsCluster=null;
  }
  try {
    FileSystem.closeAll();
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
  started=false;
}
