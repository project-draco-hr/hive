{
  if (createHashMap) {
    memUsage=Math.max(memUsage,wbSize);
    hashMap=new BytesBytesMultiHashMap(threshold,loadFactor,wbSize,memUsage);
  }
 else {
    hashMapSpilledOnCreation=true;
    hashMapOnDisk=true;
  }
  this.threshold=threshold;
  this.loadFactor=loadFactor;
  this.wbSize=wbSize;
}
