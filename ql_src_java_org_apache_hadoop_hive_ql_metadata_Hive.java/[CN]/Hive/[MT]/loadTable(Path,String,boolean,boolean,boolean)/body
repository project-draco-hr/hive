{
  Table tbl=getTable(tableName);
  if (replace) {
    tbl.replaceFiles(loadPath,isSrcLocal);
  }
 else {
    tbl.copyFiles(loadPath,isSrcLocal);
  }
  if (!holdDDLTime) {
    try {
      alterTable(tableName,tbl);
    }
 catch (    InvalidOperationException e) {
      throw new HiveException(e);
    }
  }
}
