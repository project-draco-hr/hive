{
  tss.set(startSs);
  if (startSs.hiveHist == null) {
    startSs.hiveHist=new HiveHistory(startSs);
  }
  if (startSs.getTmpOutputFile() == null) {
    File tmpDir=new File(HiveConf.getVar(startSs.getConf(),HiveConf.ConfVars.HIVEHISTORYFILELOC));
    String sessionID=startSs.getConf().getVar(HiveConf.ConfVars.HIVESESSIONID);
    try {
      File tmpFile=File.createTempFile(sessionID,".pipeout",tmpDir);
      tmpFile.deleteOnExit();
      startSs.setTmpOutputFile(tmpFile);
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
  try {
    startSs.authenticator=HiveUtils.getAuthenticator(startSs.getConf(),HiveConf.ConfVars.HIVE_AUTHENTICATOR_MANAGER);
    startSs.authorizer=HiveUtils.getAuthorizeProviderManager(startSs.getConf(),HiveConf.ConfVars.HIVE_AUTHORIZATION_MANAGER,startSs.authenticator);
    startSs.createTableGrants=CreateTableAutomaticGrant.create(startSs.getConf());
  }
 catch (  HiveException e) {
    throw new RuntimeException(e);
  }
  if (HiveConf.getBoolVar(startSs.getConf(),HiveConf.ConfVars.HIVE_OPTIMIZE_TEZ)) {
    try {
      startSs.tezSessionState.open(startSs.getSessionId(),startSs.conf);
    }
 catch (    Exception e) {
      throw new RuntimeException(e);
    }
  }
 else {
    LOG.info("No Tez session required at this point. hive.optimize.tez is false.");
  }
  return startSs;
}
