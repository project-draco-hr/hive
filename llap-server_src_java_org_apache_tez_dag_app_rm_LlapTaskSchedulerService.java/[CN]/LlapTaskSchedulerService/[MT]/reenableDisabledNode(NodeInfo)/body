{
  writeLock.lock();
  try {
    if (!nodeInfo.isBusy()) {
      refreshInstances();
    }
    LOG.info("Attempting to re-enable node: " + nodeInfo.host);
    if (nodeInfo.host.isAlive()) {
      nodeInfo.enableNode();
    }
 else {
      if (LOG.isInfoEnabled()) {
        LOG.info("Removing dead node " + nodeInfo);
      }
    }
  }
  finally {
    writeLock.unlock();
  }
}
