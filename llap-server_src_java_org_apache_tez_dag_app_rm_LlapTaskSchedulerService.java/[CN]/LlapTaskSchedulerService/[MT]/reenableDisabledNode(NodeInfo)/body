{
  writeLock.lock();
  try {
    if (!nodeInfo.isBusy()) {
      refreshInstances();
    }
    if (nodeInfo.host.isAlive()) {
      nodeInfo.enableNode();
      instanceBlackList.remove(nodeInfo.host);
      instanceToNodeMap.put(nodeInfo.host,nodeInfo);
    }
 else {
      if (LOG.isInfoEnabled()) {
        LOG.info("Removing dead node " + nodeInfo);
      }
    }
  }
  finally {
    writeLock.unlock();
  }
}
