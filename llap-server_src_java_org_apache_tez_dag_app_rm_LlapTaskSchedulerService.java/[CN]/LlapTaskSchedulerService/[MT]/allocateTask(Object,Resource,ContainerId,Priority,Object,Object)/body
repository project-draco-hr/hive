{
  TaskInfo taskInfo=new TaskInfo(task,clientCookie,priority,capability,null,null,clock.getTime());
  writeLock.lock();
  try {
    dagStats.registerTaskRequest(null,null);
  }
  finally {
    writeLock.unlock();
  }
  boolean scheduled=scheduleTask(taskInfo);
  if (!scheduled) {
    addPendingTask(taskInfo);
  }
}
