{
  this.conf=conf;
  this.jobid=jobid;
  this.in=in;
  if (name.equals(STDERR_FNAME)) {
    out=System.err;
  }
 else {
    out=System.out;
  }
  if (TempletonUtils.isset(statusdir)) {
    Path p=new Path(statusdir,name);
    FileSystem fs=p.getFileSystem(conf);
    out=fs.create(p);
    needCloseOutput=true;
    LOG.info("templeton: Writing status to " + p);
  }
}
