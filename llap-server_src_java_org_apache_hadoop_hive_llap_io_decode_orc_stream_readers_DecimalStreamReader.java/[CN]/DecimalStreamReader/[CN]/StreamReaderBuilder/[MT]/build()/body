{
  InStream presentInStream=null;
  if (presentStream != null) {
    presentInStream=StreamUtils.createInStream(OrcProto.Stream.Kind.PRESENT.name(),fileName,null,bufferSize,presentStream);
  }
  InStream valueInStream=null;
  if (valueStream != null) {
    valueInStream=StreamUtils.createInStream(OrcProto.Stream.Kind.DATA.name(),fileName,null,bufferSize,valueStream);
  }
  InStream scaleInStream=null;
  if (scaleStream != null) {
    scaleInStream=StreamUtils.createInStream(OrcProto.Stream.Kind.SECONDARY.name(),fileName,null,bufferSize,scaleStream);
  }
  return new DecimalStreamReader(columnIndex,precision,scale,presentInStream,valueInStream,scaleInStream,compressionCodec != null,rowIndex,columnEncoding);
}
