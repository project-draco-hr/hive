{
  String subdir;
  if (options.getOldStyle()) {
    return new Path(directory,String.format(BUCKET_DIGITS,options.getBucket()) + "_0");
  }
 else   if (options.isWritingBase()) {
    subdir=BASE_PREFIX + String.format(DELTA_DIGITS,options.getMaximumTransactionId());
  }
 else   if (options.getStatementId() == -1) {
    subdir=deltaSubdir(options.getMinimumTransactionId(),options.getMaximumTransactionId());
  }
 else {
    subdir=deltaSubdir(options.getMinimumTransactionId(),options.getMaximumTransactionId(),options.getStatementId());
  }
  return createBucketFile(new Path(directory,subdir),options.getBucket());
}
