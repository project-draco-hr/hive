{
  if (bd == null) {
    return null;
  }
  int intDigits=bd.precision() - bd.scale();
  if (intDigits > MAX_PRECISION) {
    return null;
  }
  int maxScale=Math.min(MAX_SCALE,Math.min(MAX_PRECISION - intDigits,bd.scale()));
  if (bd.scale() > maxScale) {
    if (allowRounding) {
      bd=bd.setScale(maxScale,RoundingMode.HALF_UP);
    }
 else {
      bd=null;
    }
  }
  return bd;
}
