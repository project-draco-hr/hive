{
  if (recordReader != null) {
    recordReader.close();
    recordReader=null;
    if (idx > 0) {
      progress+=split.getLength(idx - 1);
    }
  }
  if (idx == split.getNumSplits()) {
    return false;
  }
  try {
    recordReader=inputFormat.getRecordReader(split.getSplit(idx),jobConf,reporter);
  }
 catch (  Exception e) {
    recordReader=HiveIOExceptionHandlerUtil.handleRecordReaderCreationException(e,jobConf);
  }
  if (isSorted) {
    initIOContextSortedProps((FileSplit)split.getSplit(idx),recordReader,jobConf);
  }
  idx++;
  return true;
}
