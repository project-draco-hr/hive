{
  if (curReader != null) {
    curReader.close();
    curReader=null;
    if (idx > 0) {
      progress+=split.getLength(idx - 1);
    }
  }
  if (idx == split.getNumSplits()) {
    return false;
  }
  try {
    curReader=inputFormat.getRecordReader(split.getSplit(idx),jobConf,reporter);
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
  idx++;
  return true;
}
