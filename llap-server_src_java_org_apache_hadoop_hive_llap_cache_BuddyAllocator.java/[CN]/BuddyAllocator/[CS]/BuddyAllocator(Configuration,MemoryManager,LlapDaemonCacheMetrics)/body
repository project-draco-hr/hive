{
  this(HiveConf.getBoolVar(conf,ConfVars.LLAP_ALLOCATOR_DIRECT),(int)HiveConf.getSizeVar(conf,ConfVars.LLAP_ALLOCATOR_MIN_ALLOC),(int)HiveConf.getSizeVar(conf,ConfVars.LLAP_ALLOCATOR_MAX_ALLOC),HiveConf.getIntVar(conf,ConfVars.LLAP_ALLOCATOR_ARENA_COUNT),HiveConf.getSizeVar(conf,ConfVars.LLAP_IO_MEMORY_MAX_SIZE),mm,metrics);
