{
  Thread thread=new Thread(new Runnable(){
    @Override public void run(){
      try {
        HiveMetaStore.startMetaStore(port,bridge);
      }
 catch (      Throwable e) {
        LOG.error("Metastore Thrift Server threw an exception...",e);
      }
    }
  }
);
  thread.setDaemon(true);
  thread.start();
  loopUntilHMSReady(port);
}
