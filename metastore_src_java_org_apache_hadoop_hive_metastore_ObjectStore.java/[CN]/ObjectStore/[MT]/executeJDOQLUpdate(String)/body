{
  boolean committed=false;
  long numUpdated=0;
  try {
    openTransaction();
    Query q=pm.newQuery(query);
    numUpdated=(Long)q.execute();
    committed=commitTransaction();
    if (committed) {
      return numUpdated;
    }
 else {
      return -1;
    }
  }
  finally {
    if (!committed) {
      rollbackTransaction();
    }
  }
}
