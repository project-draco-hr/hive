{
  boolean committed=false;
  long numUpdated=0;
  LOG.info("Executing query: " + query);
  try {
    openTransaction();
    Query q=pm.newQuery(query);
    numUpdated=(Long)q.execute();
    committed=commitTransaction();
  }
  finally {
    if (!committed) {
      rollbackTransaction();
      return -1;
    }
 else {
      return numUpdated;
    }
  }
}
