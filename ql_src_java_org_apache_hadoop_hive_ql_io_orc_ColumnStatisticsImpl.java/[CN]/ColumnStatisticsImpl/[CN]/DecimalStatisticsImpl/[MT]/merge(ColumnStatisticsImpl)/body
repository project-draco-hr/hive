{
  super.merge(other);
  DecimalStatisticsImpl dec=(DecimalStatisticsImpl)other;
  if (minimum == null) {
    minimum=dec.minimum;
    maximum=dec.maximum;
    sum=dec.sum;
  }
 else   if (dec.minimum != null) {
    if (minimum.compareTo(dec.minimum) > 0) {
      minimum=dec.minimum;
    }
 else     if (maximum.compareTo(dec.maximum) < 0) {
      maximum=dec.maximum;
    }
    if (sum == null || dec.sum == null) {
      sum=null;
    }
 else {
      sum=sum.add(dec.sum);
    }
  }
}
