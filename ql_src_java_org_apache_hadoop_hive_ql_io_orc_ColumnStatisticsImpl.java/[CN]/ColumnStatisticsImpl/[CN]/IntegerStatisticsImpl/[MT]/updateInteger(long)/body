{
  if (!hasMinimum) {
    hasMinimum=true;
    minimum=value;
    maximum=value;
  }
 else   if (value < minimum) {
    minimum=value;
  }
 else   if (value > maximum) {
    maximum=value;
  }
  if (!overflow) {
    boolean wasPositive=sum >= 0;
    sum+=value;
    if ((value >= 0) == wasPositive) {
      overflow=(sum >= 0) != wasPositive;
    }
  }
}
