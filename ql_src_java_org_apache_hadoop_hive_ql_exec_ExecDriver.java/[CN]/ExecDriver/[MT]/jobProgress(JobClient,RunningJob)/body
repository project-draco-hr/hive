{
  String lastReport="";
  while (!rj.isComplete()) {
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException e) {
    }
    rj=jc.getJob(rj.getJobID());
    String report=null;
    report=" map = " + Math.round(rj.mapProgress() * 100) + "%,  reduce ="+ Math.round(rj.reduceProgress() * 100)+ "%";
    if (!report.equals(lastReport)) {
      console.printInfo(report);
      lastReport=report;
    }
  }
  return rj;
}
