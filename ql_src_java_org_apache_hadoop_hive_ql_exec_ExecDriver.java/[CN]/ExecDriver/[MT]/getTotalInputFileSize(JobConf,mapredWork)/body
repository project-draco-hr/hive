{
  long r=0;
  for (  String path : work.getPathToAliases().keySet()) {
    try {
      Path p=new Path(path);
      FileSystem fs=p.getFileSystem(job);
      ContentSummary cs=fs.getContentSummary(p);
      r+=cs.getLength();
    }
 catch (    IOException e) {
      LOG.info("Cannot get size of " + path + ". Safely ignored.");
    }
  }
  return r;
}
