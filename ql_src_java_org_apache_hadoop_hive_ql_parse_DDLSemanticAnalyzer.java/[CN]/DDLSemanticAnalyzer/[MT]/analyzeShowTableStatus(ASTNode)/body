{
  showTableStatusDesc showTblStatusDesc;
  String tableNames=unescapeIdentifier(ast.getChild(0).getText());
  String dbName=MetaStoreUtils.DEFAULT_DATABASE_NAME;
  int children=ast.getChildCount();
  HashMap<String,String> partSpec=null;
  if (children >= 2) {
    if (children > 3)     throw new SemanticException(ErrorMsg.GENERIC_ERROR.getMsg());
    for (int i=1; i < children; i++) {
      ASTNode child=(ASTNode)ast.getChild(i);
      if (child.getToken().getType() == HiveParser.Identifier)       dbName=unescapeIdentifier(child.getText());
 else       if (child.getToken().getType() == HiveParser.TOK_PARTSPEC)       partSpec=getPartSpec(child);
 else       throw new SemanticException(ErrorMsg.GENERIC_ERROR.getMsg());
    }
  }
  showTblStatusDesc=new showTableStatusDesc(ctx.getResFile(),dbName,tableNames,partSpec);
  rootTasks.add(TaskFactory.get(new DDLWork(showTblStatusDesc),conf));
  setFetchTask(createFetchTask(showTblStatusDesc.getSchema()));
}
