{
  Task<? extends Serializable> task;
  if (grant) {
    task=hiveAuthorizationTaskFactory.createGrantRoleTask(ast,getInputs(),getOutputs());
  }
 else {
    task=hiveAuthorizationTaskFactory.createRevokeRoleTask(ast,getInputs(),getOutputs());
  }
  if (task != null) {
    rootTasks.add(task);
  }
}
