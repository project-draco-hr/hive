{
  ArrayList<String> args=new ArrayList<String>();
  args.add("-e");
  args.add(exec);
  if (TempletonUtils.isset(group)) {
    args.add("-g");
    args.add(group);
  }
  if (TempletonUtils.isset(permissions)) {
    args.add("-p");
    args.add(permissions);
  }
  if (format) {
    args.add("-D");
    args.add("hive.ddl.output.format=json");
    args.add("-D");
    args.add("hive.format=json");
  }
  return args;
}
