{
  String exec="desc database " + db + "; ";
  if (extended)   exec="desc database extended " + db + "; ";
  try {
    String res=jsonRun(user,exec);
    return JsonBuilder.create(res).build();
  }
 catch (  HcatException e) {
    if (e.execBean.stderr.contains("SemanticException")) {
      return JsonBuilder.create().put("error","Database " + db + " does not exist").put("errorCode","404").put("database",db).build();
    }
    throw new HcatException("unable to describe database: " + db,e.execBean,exec);
  }
}
