{
  String testScript[]={"-- this is a comment","DROP TABLE IF EXISTS fooTab;","/*!1234 this is comment code like mysql */;","CREATE TABLE fooTab(id INTEGER);","DROP TABLE footab;","-- ending comment"};
  String resultScript[]={"DROP TABLE IF EXISTS fooTab","/*!1234 this is comment code like mysql */","CREATE TABLE fooTab(id INTEGER)","DROP TABLE footab"};
  String expectedSQL=StringUtils.join(resultScript,System.getProperty("line.separator")) + System.getProperty("line.separator");
  File testScriptFile=generateTestScript(testScript);
  String flattenedSql=HiveSchemaTool.buildCommand(HiveSchemaHelper.getDbCommandParser("derby"),testScriptFile.getParentFile().getPath(),testScriptFile.getName());
  assertEquals(expectedSQL,flattenedSql);
}
