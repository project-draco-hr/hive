{
  String statsSerialized;
  try {
    ByteBuffer val=reader.getMetadataValue(OrcRecordUpdater.ACID_STATS).duplicate();
    statsSerialized=utf8Decoder.decode(val).toString();
  }
 catch (  CharacterCodingException e) {
    throw new IllegalArgumentException("Bad string encoding for " + OrcRecordUpdater.ACID_STATS,e);
  }
  return new AcidStats(statsSerialized);
}
