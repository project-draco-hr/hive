{
  ErrorAndSolution es=null;
  if (getQueryMatches() && configMatches) {
    List<String> matchingLines=getRegexToLogLines().get(OUT_OF_MEMORY_REGEX);
    if (matchingLines.size() > 0) {
      String confName=HiveConf.ConfVars.HIVEMAPAGGRHASHMEMORY.toString();
      float confValue=HiveConf.getFloatVar(getConf(),HiveConf.ConfVars.HIVEMAPAGGRHASHMEMORY);
      es=new ErrorAndSolution("Out of memory due to hash maps used in map-side aggregation.","Currently " + confName + " is set to "+ confValue+ ". "+ "Try setting it to a lower value. i.e "+ "'set "+ confName+ " = "+ confValue / 2 + ";'");
    }
  }
  reset();
  return es;
}
