{
  llapDaemon.start();
  clusterSpecificConfiguration.set(LlapConfiguration.LLAP_DAEMON_SERVICE_HOSTS,getServiceAddress().getHostName());
  clusterSpecificConfiguration.setInt(LlapConfiguration.LLAP_DAEMON_RPC_PORT,getServiceAddress().getPort());
  clusterSpecificConfiguration.setInt(LlapConfiguration.LLAP_DAEMON_NUM_EXECUTORS,numExecutorsPerService);
  clusterSpecificConfiguration.setLong(LlapConfiguration.LLAP_DAEMON_MEMORY_PER_INSTANCE_MB,execBytesPerService);
}
