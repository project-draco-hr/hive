{
  ArrayList<String> args=new ArrayList<String>();
  for (  String input : inputs) {
    args.add("-input");
    args.add(input);
  }
  args.add("-output");
  args.add(output);
  args.add("-mapper");
  args.add(mapper);
  args.add("-reducer");
  args.add(reducer);
  for (  String f : files)   args.add("-file" + f);
  for (  String d : defines)   args.add("-D" + d);
  for (  String e : cmdenvs)   args.add("-cmdenv" + e);
  args.addAll(jarArgs);
  return args;
}
