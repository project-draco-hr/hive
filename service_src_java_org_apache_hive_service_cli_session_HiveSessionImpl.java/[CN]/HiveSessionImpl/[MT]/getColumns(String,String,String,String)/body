{
  acquire();
  try {
    GetColumnsOperation operation=getOperationManager().newGetColumnsOperation(getSession(),catalogName,schemaName,tableName,columnName);
    operation.run();
    OperationHandle opHandle=operation.getHandle();
    opHandleSet.add(opHandle);
    return opHandle;
  }
  finally {
    release();
  }
}
