{
  FileStatus[] statuses=fs.listStatus(basePath,FileUtils.HIDDEN_FILES_PATH_FILTER);
  boolean directoryFound=false;
  for (  FileStatus status : statuses) {
    if (status.isDir()) {
      directoryFound=true;
      getAllLeafDirs(status.getPath(),allDirs,fs);
    }
  }
  if (!directoryFound) {
    allDirs.add(basePath);
  }
}
