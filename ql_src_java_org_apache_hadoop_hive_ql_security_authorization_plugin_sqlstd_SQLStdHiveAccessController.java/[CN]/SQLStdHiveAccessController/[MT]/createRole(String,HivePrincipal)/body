{
  if (!this.isUserAdmin(new HivePrincipal(currentUserName,HivePrincipalType.USER))) {
    throw new HiveAccessControlException("Current user : " + currentUserName + " is not"+ " allowed to add roles. Only users belonging to admin role can add new roles.");
  }
  try {
    String grantorName=adminGrantor == null ? null : adminGrantor.getName();
    metastoreClientFactory.getHiveMetastoreClient().create_role(new Role(roleName,0,grantorName));
  }
 catch (  Exception e) {
    throw new HiveAuthzPluginException("Error create role",e);
  }
}
