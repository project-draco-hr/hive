{
  if (!this.isUserAdmin(new HivePrincipal(currentUserName,HivePrincipalType.USER))) {
    throw new HiveAccessControlException("Current user : " + currentUserName + " is not"+ " allowed to list roles. Only users belonging to admin role can list roles.");
  }
  try {
    return metastoreClientFactory.getHiveMetastoreClient().listRoleNames();
  }
 catch (  Exception e) {
    throw new HiveAuthzPluginException("Error listing all roles",e);
  }
}
