{
  if (!this.isUserAdmin(new HivePrincipal(currentUserName,HivePrincipalType.USER))) {
    throw new HiveAccessControlException("Current user : " + currentUserName + " is not"+ " allowed to drop role. Only users belonging to admin role can drop roles.");
  }
  try {
    metastoreClientFactory.getHiveMetastoreClient().drop_role(roleName);
  }
 catch (  Exception e) {
    throw new HiveAuthzPluginException("Error dropping role",e);
  }
}
