{
  HiveConf processedConf=new HiveConf();
  SQLStdHiveAccessController accessController=new SQLStdHiveAccessController(null,processedConf,new HadoopDefaultAuthenticator());
  accessController.applyAuthorizationConfigPolicy(processedConf);
  assertEquals("only set command should be allowed",processedConf.getVar(ConfVars.HIVE_SECURITY_COMMAND_WHITELIST),"set");
  assertTrue("Check for transform query disabling hook",processedConf.getVar(ConfVars.PREEXECHOOKS).contains(DisallowTransformHook.class.getName()));
  verifyParamSettability(SQLStdHiveAccessController.defaultModWhiteListSqlStdAuth,processedConf);
}
