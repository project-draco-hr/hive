{
  LOG.info("LlapDaemon shutdown invoked");
  if (llapDaemonInfoBean != null) {
    try {
      MBeans.unregister(llapDaemonInfoBean);
    }
 catch (    Throwable ex) {
      LOG.info("Error unregistering the bean; ignoring",ex);
    }
  }
  if (pauseMonitor != null) {
    pauseMonitor.stop();
  }
  if (metrics != null) {
    LlapMetricsSystem.shutdown();
  }
  LlapProxy.close();
}
