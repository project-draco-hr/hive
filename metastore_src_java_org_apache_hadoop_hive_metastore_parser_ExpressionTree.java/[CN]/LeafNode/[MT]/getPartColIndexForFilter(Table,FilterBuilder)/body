{
  int partitionColumnIndex;
  assert(table.getPartitionKeys().size() > 0);
  for (partitionColumnIndex=0; partitionColumnIndex < table.getPartitionKeys().size(); ++partitionColumnIndex) {
    if (table.getPartitionKeys().get(partitionColumnIndex).getName().equalsIgnoreCase(keyName)) {
      break;
    }
  }
  if (partitionColumnIndex == table.getPartitionKeys().size()) {
    filterBuilder.setError("Specified key <" + keyName + "> is not a partitioning key for the table");
    return -1;
  }
  return partitionColumnIndex;
}
