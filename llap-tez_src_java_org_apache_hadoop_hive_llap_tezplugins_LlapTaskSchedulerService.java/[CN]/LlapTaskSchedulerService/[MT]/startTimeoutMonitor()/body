{
  timeoutLock.lock();
  try {
    if ((timeoutFuture == null || (timeoutFuture != null && timeoutFuture.isDone())) && activeInstances.size() == 0) {
      timeoutFuture=timeoutExecutor.schedule(timeoutMonitor,timeout,TimeUnit.MILLISECONDS);
      LOG.info("Scheduled timeout monitor task to run after {} ms",timeout);
    }
 else {
      LOG.info("Timeout monitor task not started. Timeout future state: {}, #instances: {}",timeoutFuture == null ? "null" : timeoutFuture.isDone(),activeInstances.size());
    }
  }
  finally {
    timeoutLock.unlock();
  }
}
