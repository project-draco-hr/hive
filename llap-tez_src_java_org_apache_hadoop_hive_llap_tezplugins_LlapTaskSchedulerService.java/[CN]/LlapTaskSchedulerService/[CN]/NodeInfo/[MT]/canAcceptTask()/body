{
  boolean result=!hadCommFailure && !disabled && serviceInstance.isAlive()&& (numSchedulableTasks == -1 || ((numSchedulableTasks - numScheduledTasks) > 0));
  if (LOG.isInfoEnabled()) {
    LOG.info("Node[" + serviceInstance.getHost() + ":"+ serviceInstance.getRpcPort()+ ", "+ serviceInstance.getWorkerIdentity()+ "]: "+ "canAcceptTask={}, numScheduledTasks={}, numSchedulableTasks={}, hadCommFailure={}, disabled={}, serviceInstance.isAlive={}",result,numScheduledTasks,numSchedulableTasks,hadCommFailure,disabled,serviceInstance.isAlive());
  }
  return result;
}
