{
  long size=0;
  for (  Operator<?> o : (input ? base.getAllRootOperators() : base.getAllLeafOperators())) {
    if (o.getStatistics() == null) {
      return Long.MAX_VALUE;
    }
    long currSize=o.getStatistics().getDataSize();
    if ((currSize < 0) || ((Long.MAX_VALUE - size) < currSize)) {
      return Long.MAX_VALUE;
    }
    size+=currSize;
  }
  return size;
}
