{
  StringBuilder sb=new StringBuilder();
  int l1=1 + r.nextInt(500), l2=r.nextInt(500);
  if (r.nextBoolean()) {
    sb.append("-");
  }
  sb.append(getRandString(r,DECIMAL_CHARS,l1));
  if (l2 != 0) {
    sb.append(".");
    sb.append(getRandString(r,DECIMAL_CHARS,l2));
  }
  BigDecimal bd=new BigDecimal(sb.toString());
  return bd;
}
