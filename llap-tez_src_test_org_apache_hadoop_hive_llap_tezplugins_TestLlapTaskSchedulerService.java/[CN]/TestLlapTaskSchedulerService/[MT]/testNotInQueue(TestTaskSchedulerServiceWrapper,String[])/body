{
  Priority priority1=Priority.newInstance(1);
  try {
    tsWrapper.controlScheduler(true);
    tsWrapper.allocateTask(hosts,priority1);
    tsWrapper.allocateTask(hosts,priority1);
    tsWrapper.allocateTask(hosts,priority1);
    tsWrapper.awaitLocalTaskAllocations(2);
    assertEquals(0,tsWrapper.ts.delayedTaskQueue.size());
  }
  finally {
    tsWrapper.shutdown();
  }
}
