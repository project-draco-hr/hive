{
  Thread t=new Thread(){
    @Override public void run(){
      do {
        try {
          Thread.sleep(1000);
        }
 catch (        InterruptedException e) {
          LOG.warn("Signalling thread was interuppted: " + e.getMessage());
        }
      }
 while (!server.isServing());
      startLock.lock();
      try {
        startedServing.boolVal=true;
        startCondition.signalAll();
      }
  finally {
        startLock.unlock();
      }
    }
  }
;
  t.start();
}
