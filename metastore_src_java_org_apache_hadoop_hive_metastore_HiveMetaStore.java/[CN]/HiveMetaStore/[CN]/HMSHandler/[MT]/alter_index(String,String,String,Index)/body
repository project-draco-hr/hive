{
  startFunction("alter_index",": db=" + dbname + " base_tbl="+ base_table_name+ " idx="+ index_name+ " newidx="+ newIndex.getIndexName());
  newIndex.putToParameters(Constants.DDL_TIME,Long.toString(System.currentTimeMillis() / 1000));
  boolean success=false;
  try {
    getMS().alterIndex(dbname,base_table_name,index_name,newIndex);
    success=true;
  }
 catch (  InvalidObjectException e) {
    throw new InvalidOperationException(e.getMessage());
  }
 finally {
    endFunction("alter_index",success);
  }
  return;
}
