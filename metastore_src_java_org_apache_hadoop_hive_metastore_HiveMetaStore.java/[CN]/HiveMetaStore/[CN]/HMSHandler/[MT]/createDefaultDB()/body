{
  if (HMSHandler.createDefaultDB || !checkForDefaultDb) {
    return;
  }
  try {
    getMS().getDatabase(MetaStoreUtils.DEFAULT_DATABASE_NAME);
  }
 catch (  NoSuchObjectException e) {
    getMS().createDatabase(new Database(MetaStoreUtils.DEFAULT_DATABASE_NAME,wh.getDefaultDatabasePath(MetaStoreUtils.DEFAULT_DATABASE_NAME).toString()));
  }
  HMSHandler.createDefaultDB=true;
}
