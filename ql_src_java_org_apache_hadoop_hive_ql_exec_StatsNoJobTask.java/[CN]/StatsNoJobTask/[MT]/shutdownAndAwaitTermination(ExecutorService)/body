{
  threadPool.shutdown();
  try {
    if (!threadPool.awaitTermination(100,TimeUnit.SECONDS)) {
      threadPool.shutdownNow();
      if (!threadPool.awaitTermination(100,TimeUnit.SECONDS)) {
        LOG.debug("Stats collection thread pool did not terminate");
      }
    }
  }
 catch (  InterruptedException ie) {
    threadPool.shutdownNow();
    Thread.currentThread().interrupt();
  }
}
