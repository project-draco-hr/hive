{
  Path path=new Path(origPathStr);
  String result=origPathStr;
  if (!(path.getFileSystem(conf) instanceof DistributedFileSystem) && !(path.getFileSystem(conf) instanceof LocalFileSystem)) {
    return result;
  }
  if (!path.isAbsolute()) {
    result="/user/" + user + "/"+ origPathStr;
  }
  return result;
}
