{
  if (hookContext.getHookType().equals(HookType.POST_EXEC_HOOK)) {
    ArrayList<Task<? extends Serializable>> rootTasks=hookContext.getQueryPlan().getRootTasks();
    for (    Task<? extends Serializable> rootTask : rootTasks) {
      if (rootTask.getWork() instanceof MapredWork) {
        Assert.assertTrue("The root map reduce task's input was not marked as sorted.",((MapredWork)rootTask.getWork()).isInputFormatSorted());
      }
    }
  }
}
