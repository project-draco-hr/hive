{
  if (expr == null) {
    return expr;
  }
  if (HiveConf.getBoolVar(conf,ConfVars.HIVEVARIABLESUBSTITUTE)) {
    l4j.debug("Substitution is on: " + expr);
  }
 else {
    return expr;
  }
  int depth=HiveConf.getIntVar(conf,ConfVars.HIVEVARIABLESUBSTITUTEDEPTH);
  return substitute(conf,expr,depth);
}
