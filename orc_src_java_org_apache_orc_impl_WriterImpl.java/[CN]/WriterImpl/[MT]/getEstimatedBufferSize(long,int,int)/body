{
  int estBufferSize=(int)(stripeSize / (20 * numColumns));
  estBufferSize=getClosestBufferSize(estBufferSize);
  if (estBufferSize > bs) {
    estBufferSize=bs;
  }
 else {
    LOG.info("WIDE TABLE - Number of columns: " + numColumns + " Chosen compression buffer size: "+ estBufferSize);
  }
  return estBufferSize;
}
