{
  if (willSpill()) {
    setupWriter();
    PTFRecordWriter rw=(PTFRecordWriter)getRecordWriter();
    BlockInfo blkInfo=new BlockInfo();
    try {
      blkInfo.startOffset=rw.outStream.getLength();
      blockInfos.add(blkInfo);
    }
 catch (    IOException e) {
      clear();
      LOG.error(e.toString(),e);
      throw new HiveException(e);
    }
  }
  super.add(t);
}
