{
  if (LOG.isDebugEnabled()) {
    LOG.debug("Estimated average row size: " + avgRowSize);
  }
  for (int i=0; i < rowCounts.size(); i++) {
    long rc=rowCounts.get(i);
    long s=dataSizes.get(i);
    if (rc <= 0 && s > 0) {
      rc=s / avgRowSize;
      rowCounts.set(i,rc);
    }
    if (s <= 0 && rc > 0) {
      s=rc * avgRowSize;
      dataSizes.set(i,s);
    }
  }
}
