{
  jc=job;
  hasDynamicPartitions=HiveConf.getBoolVar(job,HiveConf.ConfVars.HIVEMERGECURRENTJOBHASDYNAMICPARTITIONS);
  isListBucketingAlterTableConcatenate=HiveConf.getBoolVar(job,HiveConf.ConfVars.HIVEMERGECURRENTJOBCONCATENATELISTBUCKETING);
  listBucketingDepth=HiveConf.getIntVar(job,HiveConf.ConfVars.HIVEMERGECURRENTJOBCONCATENATELISTBUCKETINGDEPTH);
  String specPath=RCFileBlockMergeOutputFormat.getMergeOutputPath(job).toString();
  Path tmpPath=Utilities.toTempPath(specPath);
  Path taskTmpPath=Utilities.toTaskTempPath(specPath);
  updatePaths(tmpPath,taskTmpPath);
  try {
    fs=(new Path(specPath)).getFileSystem(job);
    autoDelete=fs.deleteOnExit(outPath);
  }
 catch (  IOException e) {
    this.exception=true;
    throw new RuntimeException(e);
  }
}
