{
  super.tearDown();
  Statement stmt=con.createStatement();
  assertNotNull("Statement is null",stmt);
  ResultSet res=stmt.executeQuery("drop table " + tableName);
  assertFalse(res.next());
  res=stmt.executeQuery("drop table " + partitionedTableName);
  assertFalse(res.next());
  con.close();
  assertTrue("Connection should be closed",con.isClosed());
  Exception expectedException=null;
  try {
    con.createStatement();
  }
 catch (  Exception e) {
    expectedException=e;
  }
  assertNotNull("createStatement() on closed connection should throw exception",expectedException);
}
