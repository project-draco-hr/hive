{
  super.setUp();
  Class.forName(driverName);
  if (standAloneServer) {
    con=DriverManager.getConnection("jdbc:hive://localhost:10000/default","","");
  }
 else {
    con=DriverManager.getConnection("jdbc:hive://","","");
  }
  assertNotNull("Connection is null",con);
  assertFalse("Connection should not be closed",con.isClosed());
  Statement stmt=con.createStatement();
  assertNotNull("Statement is null",stmt);
  try {
    stmt.executeQuery("drop table " + tableName);
  }
 catch (  Exception ex) {
    fail(ex.toString());
  }
  ResultSet res=stmt.executeQuery("create table " + tableName + " (key int comment 'the key', value string) comment '"+ tableComment+ "'");
  assertFalse(res.next());
  res=stmt.executeQuery("load data local inpath '" + dataFilePath.toString() + "' into table "+ tableName);
  assertFalse(res.next());
  try {
    stmt.executeQuery("drop table " + partitionedTableName);
  }
 catch (  Exception ex) {
    fail(ex.toString());
  }
  res=stmt.executeQuery("create table " + partitionedTableName + " (key int, value string) comment '"+ partitionedTableComment+ "' partitioned by (dt STRING)");
  assertFalse(res.next());
  res=stmt.executeQuery("load data local inpath '" + dataFilePath.toString() + "' into table "+ partitionedTableName+ " PARTITION (dt='20090619')");
  assertFalse(res.next());
  try {
    stmt.executeQuery("drop view " + viewName);
  }
 catch (  Exception ex) {
    fail(ex.toString());
  }
  res=stmt.executeQuery("create view " + viewName + " comment '"+ viewComment+ "' as select * from "+ tableName);
  assertFalse(res.next());
}
