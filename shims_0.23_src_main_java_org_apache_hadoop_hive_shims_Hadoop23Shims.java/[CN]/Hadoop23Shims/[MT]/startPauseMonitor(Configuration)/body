{
  try {
    Class.forName("org.apache.hadoop.util.JvmPauseMonitor");
    org.apache.hadoop.util.JvmPauseMonitor pauseMonitor=new org.apache.hadoop.util.JvmPauseMonitor(conf);
    pauseMonitor.start();
  }
 catch (  Throwable t) {
    LOG.warn("Could not initiate the JvmPauseMonitor thread." + " GCs and Pauses may not be " + "warned upon.",t);
  }
}
