{
  this.fileId=fileId;
  this.fs=fileSystem;
  this.path=path;
  this.codec=codec;
  this.types=types;
  this.bufferSize=bufferSize;
  this.rowIndexStride=strideRate;
  this.cache=cache;
  this.qfCounters=qfCounters;
  this.consumer=consumer;
  this.useZeroCopy=useZeroCopy;
  if (useZeroCopy && !cache.getAllocator().isDirectAlloc()) {
    throw new UnsupportedOperationException("Cannot use zero-copy reader with non-direct cache " + "buffers; either disable zero-copy or enable direct cache allocation");
  }
}
