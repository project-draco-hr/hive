{
  Options result=new Options();
  result.addOption(OptionBuilder.withLongOpt("dry-run").withDescription("Generate a list of dangling scratch dir, printed on console").create('r'));
  result.addOption(OptionBuilder.withLongOpt("scratchdir").withDescription("Specify a non-default location of the scratch dir").hasArg().create('s'));
  result.addOption(OptionBuilder.withLongOpt("verbose").withDescription("Print verbose message").create('v'));
  result.addOption(OptionBuilder.withLongOpt("help").withDescription("print help message").create('h'));
  return result;
}
