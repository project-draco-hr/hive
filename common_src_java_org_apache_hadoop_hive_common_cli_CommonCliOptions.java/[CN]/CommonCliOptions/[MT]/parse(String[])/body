{
  try {
    commandLine=new GnuParser().parse(OPTIONS,args);
    if (commandLine.hasOption('h')) {
      printUsage();
      System.exit(1);
    }
    if (commandLine.hasOption('v')) {
      verbose=true;
    }
  }
 catch (  ParseException e) {
    System.err.println(e.getMessage());
    printUsage();
    System.exit(1);
  }
}
