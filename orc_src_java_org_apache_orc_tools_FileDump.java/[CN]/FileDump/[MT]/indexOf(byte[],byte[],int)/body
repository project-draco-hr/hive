{
  if (data == null || data.length == 0 || pattern == null || pattern.length == 0 || index > data.length || index < 0) {
    return -1;
  }
  int j=0;
  for (int i=index; i < data.length; i++) {
    if (pattern[j] == data[i]) {
      j++;
    }
 else {
      j=0;
    }
    if (j == pattern.length) {
      return i - pattern.length + 1;
    }
  }
  return -1;
}
